{
  "name": "utilitypes",
  "description": "A collection of utility types for TypeScript",
  "version": "1.0.0-beta.5",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "scripts": {
    "commit": "cz",
    "prepare": "husky install",
    "lint:yamllint": "yamllint **/*.yaml --ignore=node_modules/**/* --ignore=pnpm-lock.yaml",
    "lint": "run-p lint:*",
    "test:eslint": "eslint --ignore-path .gitignore .",
    "test:tsc": "tsc --noEmit",
    "test": "run-p test:*",
    "build:types": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build": "run-p build:*",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "commitizen": "^4.2.4",
    "commitlint": "^14.1.0",
    "commitlint-config-gitmoji": "^2.2.5",
    "cz-emoji": "^1.3.1",
    "eslint": "^8.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "semantic-release": "^18.0.0",
    "semantic-release-gitmoji": "^1.4.2",
    "tsc-alias": "^1.4.0",
    "tsc-files": "^1.1.2",
    "typescript": "^4.4.4",
    "yaml-lint": "^1.2.4"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "typescript",
    "ts",
    "types",
    "utility",
    "util",
    "utilities",
    "exclusive"
  ],
  "author": {
    "name": "TomokiMiyauci",
    "email": "contact@miyauchi.dev",
    "url": "https://miyauchi.dev/"
  },
  "homepage": "https://github.com/TomokiMiyauci/utilitypes#readme",
  "bugs": "https://github.com/TomokiMiyauci/utilitypes/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/TomokiMiyauci/utilitypes.git"
  },
  "funding": {
    "type": "patreon",
    "url": "https://www.patreon.com/tomoki_miyauci"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "tsc-files --noEmit",
      "eslint --cache --fix"
    ],
    "*.{json,md,mdx}": "prettier -w",
    "*.{yaml,yml}": "yamllint"
  }
}
